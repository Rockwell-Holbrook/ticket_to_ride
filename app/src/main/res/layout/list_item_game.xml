<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="#"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_player_count_text_view" android:padding="3dp" android:textColor="@color/white"/>
    <TextView
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:padding="3dp" android:textColor="@color/white"/>
    <TextView
            android:text="#"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/max_player_count_text_view"
            android:layout_weight="1" android:padding="3dp" android:textColor="@color/white"/>
    <TextView
            android:text="Game Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_name_text_view"
            android:layout_weight="3" android:padding="3dp" android:textColor="@color/white"/>
    <TextView
            android:text="Host Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/host_name_text_view"
            android:layout_weight="3" android:padding="3dp" android:textColor="@color/white"/>
</LinearLayout>