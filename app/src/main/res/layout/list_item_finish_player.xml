<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="match_parent">

    <TextView
            android:text="@string/winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/winner_text_view" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textColor="@color/red"
            android:textStyle="bold"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/player_avatar" android:background="@color/silver">

        <TextView
                android:text="@string/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/finish_game_username" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent" android:textSize="12sp"/>
        <TextView
                android:text="@string/total_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/finish_game_username" android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        <TextView
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_points_text_view"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/finish_game_username"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:id="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:background="@color/blue"
                app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="4dp"/>
        <TextView
                android:text="@string/routes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView10"/>
        <TextView
                android:text="40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/routes_points_text_view"
                android:textSize="10sp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView10"/>
        <TextView
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/completed_tickets_count"
                android:textSize="8sp"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                android:background="@drawable/message_send_button" android:paddingEnd="1dp" android:paddingStart="1dp"/>
        <TextView
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/incompleted_tickets_count"
                android:textSize="8sp"
                android:background="@drawable/message_send_button" android:paddingEnd="1dp" android:paddingStart="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5" app:layout_constraintStart_toEndOf="@+id/imageView5"
        />
        <TextView
                android:text="@string/tickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView11"/>
        <TextView
                android:text="@string/bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView12"/>
        <TextView
                android:text="40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ticket_points_text_view"
                android:textSize="10sp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/routes_points_text_view"/>
        <TextView
                android:text="25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bonus_points_text_view"
                android:textSize="10sp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ticket_points_text_view"/>
        <TextView
                android:text="+60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/completed_ticket_points_text_view"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"/>
        <TextView
                android:text="-20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/incomplete_points_text_view"
                android:textSize="10sp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/completed_ticket_points_text_view"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:id="@+id/textView17" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:background="@color/blue"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView16"
                android:layout_marginTop="4dp"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="10dp" app:srcCompat="@mipmap/ticket_back"
                android:id="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/textView17" android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="10dp" app:srcCompat="@drawable/select_check_green"
                android:id="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
        />

        <ImageView
                android:layout_width="20dp"
                android:layout_height="10dp" app:srcCompat="@mipmap/ticket_back"
                android:id="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="10dp" app:srcCompat="@drawable/ic_close_red"
                android:id="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
        />
        <TextView
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:id="@+id/textView19" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:background="@color/blue"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/textView20"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp" android:text="@string/bonus" android:textSize="10sp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/incompleted_tickets_count"/>
        <TextView
                android:text="@string/no_bonuses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_bonuses_text_view" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView20" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textSize="10sp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="48dp"
                android:layout_height="432dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView19" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp" app:srcCompat="@mipmap/longest_route"
                    android:id="@+id/longest_route_award" android:layout_margin="2dp" android:visibility="visible"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp" app:srcCompat="@mipmap/globetrotter_award"
                    android:id="@+id/globetrotter_award" android:layout_margin="2dp"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/blue_player" android:id="@+id/player_avatar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.47" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/winner_text_view"/>

</android.support.constraint.ConstraintLayout>