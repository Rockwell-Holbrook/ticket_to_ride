<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" >

    <TextView
            android:text="@string/username"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/chat_sender_username" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/chat_sender_message"
            android:textColor="@color/black"/>
    <TextView
            android:text="@string/message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/chat_sender_message" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chat_sender_username"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
            android:paddingLeft="12dp" android:paddingRight="12dp"
            android:textSize="12sp" android:textColor="@color/black"/>
</android.support.constraint.ConstraintLayout>